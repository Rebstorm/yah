    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "importHelpers": true,
    "target": "es2015",
    "module": "es2020",
    "lib": [
      "es2018",
      "dom"
    ],
    "paths": {
      "@yah/weather": [
        "dist/yah/weather/yah-weather",
        "dist/yah/weather"
      ],
      "yah-weather": [
        "dist/yah-weather/yah-weather",
        "dist/yah-weather"
      ],
      "yah-light": [
        "dist/yah-light/yah-light",
        "dist/yah-light"
      ]
    }
  }
}